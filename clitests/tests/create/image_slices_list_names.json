{
    "description": "Test creation of multi-slice (3D, layered, cube) textures with image input files provided in a file of names.",
    "command": "ktx create --testrun --format R8G8B8A8_UNORM ${subcase[options]} --levels 1 --zstd 20 @@input/png/slicelist_names output/create/image_slices/output_${subcase[id]}.ktx2",
    "status": 0,
    "outputs": {
        "output/create/image_slices/output_${subcase[id]}.ktx2": "golden/create/image_slices/output_${subcase[id]}.ktx2"
    },
    "args": {
        "subcase": [
            { "id": "3D", "options": "--depth 6" },
            { "id": "layered", "options": "--layers 6" },
            { "id": "cubemap", "options": "--cubemap" }
        ]
    }
}
