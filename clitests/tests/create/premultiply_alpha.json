{
    "description": "Test create with premultiply alpha.",
    "command": "ktx create --testrun ${subcase[flag]} input/png_sample/${subcase[file]}${subcase[ext]} output/create/premultiply_alpha/${subcase[file]}-${subcase[name]}.ktx2",
    "status": 0,
    "outputs": {
        "output/create/premultiply_alpha/${subcase[file]}-${subcase[name]}.ktx2": "golden/create/premultiply_alpha/${subcase[file]}-${subcase[name]}.ktx2"
    },
    "args": {
        "subcase": [
            { "flag": "--format R8G8B8A8_SRGB", "file": "alpha_complex", "ext": ".png", "name": "RGBA-straight" },
            { "flag": "--format R8G8B8A8_SRGB --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "RGBA-premultiplied" },
            { "flag": "--format R8G8B8A8_SRGB --encode basis-lz --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "etc1s" },
            { "flag": "--format R8G8B8A8_SRGB --encode uastc --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "uastc" },
            { "flag": "--format ASTC_4x4_SRGB_BLOCK --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "astc" },
            { "flag": "--format R8G8B8A8_SRGB --zstd 5 --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "zstd" },
            { "flag": "--format R8G8B8A8_SRGB --zlib 5 --premultiply-alpha", "file": "alpha_complex", "ext": ".png", "name": "zlib" }
        ]
    }
}