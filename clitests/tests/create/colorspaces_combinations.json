{
    "description": "Test combinations of assign and convert OETF and primaries parameters.",
    "command": "ktx create --testrun --format R8G8B8A8_UNORM ${select[args]} input/png/colorspace_${subcase}.png output/create/colorspaces_combinations/output_${select[id]}_${subcase}.ktx2",
    "status": 0,
    "outputTolerance": 0.08,
    "outputs": {
        "output/create/colorspaces_combinations/output_${select[id]}_${subcase}.ktx2": "golden/create/colorspaces_combinations/output_${select[id]}.ktx2"
    },
    "args": {
        "select": [
            { "id": "combination_1", "args": "--assign-oetf srgb --convert-oetf linear --assign-primaries bt2020 --convert-primaries adobergb" },
            { "id": "combination_2", "args": "--assign-oetf linear --convert-oetf linear --assign-primaries pal525 --convert-primaries bt709" },
            { "id": "combination_3", "args": "--assign-oetf linear --convert-oetf srgb --assign-primaries aces --convert-primaries ntsc1953" },
            { "id": "combination_4", "args": "--assign-oetf srgb --convert-oetf linear --assign-primaries bt601-ebu --convert-primaries bt601-smpte" }
        ],
        "subcase": [
            "default",
            "sRGB",
            "sRGB_gamma_2_2",
            "gamma_1_8",
            "gamma_2_2",
            "gamma_2_4",
            "gamma_1_0",
            "cHRM_BT709",
            "cHRM_BT601_EBU",
            "cHRM_BT601_SMPTE",
            "cHRM_BT2020",
            "cHRM_CIEXYZ",
            "cHRM_ACES",
            "cHRM_ACEScc",
            "cHRM_NTSC1953",
            "cHRM_PAL525",
            "cHRM_DisplayP3",
            "cHRM_AdobeRGB",
            "cHRM_unknown",
            "sRGB_cHRM"
        ]
    }
}
