{
    "description": "Test TF parameters which should result in error if used with an sRGB format.",
    "command": "ktx create --testrun --format ${format} --${subcase}-tf linear input/png/colorspace_default.png output/create/colorspaces_error/${format}_${subcase}_tf_linear.ktx2",
    "status": 1,
    "stderr": "golden/create/colorspaces_error/${subcase}_tf_linear.err.txt",
    "args": {
        "format": [
            "R8_SRGB",
            "R8G8_SRGB",
            "R8G8B8_SRGB",
            "R8G8B8A8_SRGB",
            "B8G8R8_SRGB",
            "B8G8R8A8_SRGB"
        ],
        "subcase": [
            "assign",
            "convert"
        ]
    }
}
