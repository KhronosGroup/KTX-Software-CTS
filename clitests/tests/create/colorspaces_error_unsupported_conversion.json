            "R8G8B8A8_SRGB",
            "B8G8R8_SRGB",
            "B8G8R8A8_SRGB"
        ],
         "transfer": [
            "ntsc",
            "slog",
            "slog2",
            "bt1886",
            "hlg_eotf",
            "hlg_oetf",
            "pq_oetf",
            "dcip3",
            "pal_oetf",
            "pal625_eotf",
            "acescc",
            "acescct",
            "adobergb"
        ]
    }

