{
    "description": "Missing files must be handled with grace.",
    "command": "ktx info ${format[args]} input/info/${subcase}.ktx2",
    "status": 2,
    "stdout": "golden/info/empty.txt",
    "stderr": "golden/info/missing_file/${subcase}.err",
    "args": {
        "format": [
            {
                "args": ""
            },
            {
                "args": "--format text"
            },
            {
                "args": "--format json"
            },
            {
                "args": "--format mini-json"
            }
        ],
        "subcase": [
            "missing_file"
        ]
    }
}
