{
    "description": "The value of KTXswizzle must match /^[rgba01]{4}$/.",
    "command": "ktx validate ${format[args]} input/validate/7119/error_KTXswizzleInvalidValue_${subcase}.ktx2",
    "status": 3,
    "stdout": "golden/validate/7119/error_KTXswizzleInvalidValue_${subcase}.out.${format[ext]}",
    "args": {
        "format": [
            {
                "args": "",
                "ext": "txt"
            },
            {
                "args": "--format text",
                "ext": "txt"
            },
            {
                "args": "--format json",
                "ext": "json"
            },
            {
                "args": "--format mini-json",
                "ext": "mini.json"
            }
        ],
        "subcase": [
            "rrrx",
            "xrrr",
            "xxxx",
            "rgb2"
        ]
    }
}
