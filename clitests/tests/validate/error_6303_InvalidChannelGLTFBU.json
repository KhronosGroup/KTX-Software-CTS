{
    "description": "KHR_texture_basisu requires 2D texture type",
    "command": "ktx validate ${GLTFBasisU[flag]} ${format[args]} input/validate/6303/error_InvalidChannelGLTFBU_${subcase}.ktx2",
    "status": "${GLTFBasisU[status]}",
    "stdout": "golden/validate/6303/error_${GLTFBasisU[outPrefix]}_InvalidChannelGLTFBU_${subcase}.out.${format[ext]}",
    "args": {
        "GLTFBasisU": [
            {
                "flag": "",
                "status": 0,
                "outPrefix": "disabled"
            },
            {
                "flag": "--gltf-basisu",
                "status": 3,
                "outPrefix": "enabled"
            }
        ],
        "format": [
            {
                "args": "",
                "ext": "txt"
            },
            {
                "args": "--format text",
                "ext": "txt"
            },
            {
                "args": "--format json",
                "ext": "json"
            },
            {
                "args": "--format mini-json",
                "ext": "mini.json"
            }
        ],
        "subcase": [
            "ETC1S_AAA",
            "ETC1S_GGG",
            "ETC1S_RRR_AAA",
            "ETC1S_GGG_AAA",
            "ETC1S_RGB_GGG",
            "ETC1S_RGB_RRR",
            "UASTC_RRRG"
        ]
    }
}
