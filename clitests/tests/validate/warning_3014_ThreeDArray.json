{
    "description": "Warn on 3D Array texture",
    "command": "ktx validate ${warnAsErr[flag]} ${format[args]} input/validate/3014/warning_ThreeDArray.ktx2",
    "status": "${warnAsErr[status]}",
    "stdout": "golden/validate/3014/${warnAsErr[outPrefix]}_ThreeDArray.out.${format[ext]}",
    "args": {
        "warnAsErr": [
            {
                "flag": "",
                "status": 0,
                "outPrefix": "warning"
            },
            {
                "flag": "--warnings-as-errors",
                "status": 3,
                "outPrefix": "error"
            }
        ],
        "format": [
            {
                "args": "",
                "ext": "txt"
            },
            {
                "args": "--format text",
                "ext": "txt"
            },
            {
                "args": "--format json",
                "ext": "json"
            },
            {
                "args": "--format mini-json",
                "ext": "mini.json"
            }
        ]
    }
}
