{
    "description": "KHR_texture_basisu requires 2D texture type",
    "command": "ktx validate --testrun ${GLTFBasisU[flag]} ${format[args]} input/validate/3102/error_InvalidTextureTypeGLTFBU_${subcase}.ktx2",
    "status": "${GLTFBasisU[status]}",
    "stdout": "golden/validate/3102/error_${GLTFBasisU[outPrefix]}_InvalidTextureTypeGLTFBU_${subcase}.out.${format[ext]}",
    "args": {
        "GLTFBasisU": [
            {
                "flag": "",
                "status": 0,
                "outPrefix": "disabled"
            },
            {
                "flag": "--gltf-basisu",
                "status": 3,
                "outPrefix": "enabled"
            }
        ],
        "format": [
            {
                "args": "",
                "ext": "txt"
            },
            {
                "args": "--format text",
                "ext": "txt"
            },
            {
                "args": "--format json",
                "ext": "json"
            },
            {
                "args": "--format mini-json",
                "ext": "mini.json"
            }
        ],
        "subcase": [
            "2DArray",
            "3D",
            "Cube"
        ]
    }
}
