{
    "description": "KHR_texture_basisu only allows NONE and ZSTD supercompression for UASTC",
    "command": "ktx validate ${GLTFBasisU[flag]} ${format[args]} input/validate/6302/error_IncompatibleModelGLTFBU_${subcase}.ktx2",
    "status": "${GLTFBasisU[status]}",
    "stdout": "golden/validate/6302/error_${GLTFBasisU[outPrefix]}_IncompatibleModelGLTFBU_${subcase}.out.${format[ext]}",
    "args": {
        "GLTFBasisU": [
            {
                "flag": "",
                "status": 0,
                "outPrefix": "disabled"
            },
            {
                "flag": "--gltf-basisu",
                "status": 3,
                "outPrefix": "enabled"
            }
        ],
        "format": [
            {
                "args": "",
                "ext": "txt"
            },
            {
                "args": "--format text",
                "ext": "txt"
            },
            {
                "args": "--format json",
                "ext": "json"
            },
            {
                "args": "--format mini-json",
                "ext": "mini.json"
            }
        ],
        "subcase": [
            "UASTC_ZLIB"
        ]
    }
}
